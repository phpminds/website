{% extends "base.twig" %}
{% block content %}
    <section>

        <div class="large-12 columns banner">
            <img class="phpminds-logo" src="imgs/phpminds-banner.svg" alt="phpminds - php usergroup"/>

            <h2 id="strapline"> [ meeting every 2nd Thursday of the month at 7pm in Nottingham ]</h2>
        </div>
    </section>
    <div class="row">
        <div class="large-offset-1 large-10 small-12 columns h-event">
            {% if (eventExists) %}
            <h3 class="p-name"><i class="fa fa-calendar"></i> {{ event.getTalk().getTitle() }}</h3>
            <h4> on {{ event.getDateTimeAsString }} {% if (event.getTalk().getSpeaker().getFirstName()) %} by {{ event.getTalk().getSpeaker().getFirstName() }} {{ event.getTalk().getSpeaker().getLastName() }} ( <a href="https://twitter.com/{{ event.getTalk().getSpeaker().getTwitter()|slice(1) }}">{{ event.getTalk().getSpeaker().getTwitter() }}</a> ) {% endif %}</h4>

            <div class="p-summary">
                <p>{{ event.getTalk().getDescription() | raw }} <!--|length > 450 ? event.description|raw| slice(0, 450) ~ '...[read more]' : event.description|raw }}
                    --></p>

                <p class="right"><a class="button alert" href="{{ event.getMeetupURL }}">RSVP</a></p>
            </div>
            {% else %}
                <div class="p-summary">
                    <h3>
                        There are no published events. Please check again soon.
                    </h3>
                </div>
            {% endif %}
        </div>
    </div>
    <div id="map"></div>
{% if (previousEvents) %}
    <section class="section-lite-green past-events" id="past-events">

        <div class="row">
            <div class=" large-offset-1 large-10 small-12 columns pagination">

                <h3><i class="fa fa-calendar-times-o"></i> Past Events</h3>

                {{ "past-events" | content | raw }}

                <div class="pages">
                    <div id="page-100">
                        <ul>
                            {% for previousEvent in previousEvents %}
                            {% if ((loop.index-1) % 5 == 0) %}
                        </ul>
                    </div>
                    <div class="page" id="page-{{ loop.revindex }}">
                        <ul>
                            {% endif %}
                            <li class="item-{{ loop.revindex -1 }}"><a
                                        href="../../event/{{ previousEvent.getMindsUrl }}">{{ previousEvent.getTalk().getTitle|e }}
                                    on {{ previousEvent.getDateTimeAsString }}</a></li>

                            {% endfor %}

                        </ul>
                    </div>
                </div>
               <div class="pagination-control pagination-number">
                 <ul>
                {% set page = 1 %}
                {% for previousEvent in previousEvents %}
                    {% if ((loop.revindex-1) % 5 == 0) %}

                       <li><a href="#page-{{ loop.index }}"> {{ page }}</a></li>
                        {% set page = page + 1 %}
                    {% endif %}
                {% endfor %}
                   </ul>
                    </div>
            </div>


        </div>
        <div class="row" id="speak">
            <div class=" large-offset-1 large-10 small-12 columns">
                <h3><i class="fa fa-bullhorn"></i> Speak to us </h3>
                {{ "speak" | content | raw }}

            </div>
        </div>
        <div class="row" id="code-of-conduct">
            <div class=" large-offset-1 large-10 small-12 columns">
                <h3>Code of conduct </h3>
                {{ "code-of-conduct" | content | raw }}

            </div>
        </div>
    </section>
{% endif %}
    <section class="supporters" id="supporters">

        <div class="row">
            <div class="large-10 large-offset-1 small-12 columns">
                <h3>Supporters</h3>
                {{ "supporters-content" | content | raw }}
                <div class="row">
                    <div class="small-6 large-4  columns">

                        <div class="supporter">
                            <div class="supporter-icon-box">
                                <a href="http://wearejh.com/"><img class="supporter-icon" src="imgs/JH-Logo–Colour–RGB.svg" alt="JH Nottingham"/></a>
                            </div>
                            <h4 class="supporter-heading adjust-heading">JH Nottingham</h4>
                            <span class="supporter-description">{{ "supporters-content-jh" | content | raw }}</span>
                        </div>

                    </div>

                    <div class="small-6 large-4  columns">

                        <div class="supporter">
                            <div class="supporter-icon-box">
                                <a href="http://rebelrecruitment.co.uk"><img class="supporter-icon" src="imgs/sponsor.svg" alt="Rebel Recruitment"/></a>
                            </div>
                            <h4 class="supporter-heading">Rebel Recruitment</h4>
                            <span class="supporter-description">{{ "supporters-content-rebel" | content | raw }}</span>

                        </div>
                    </div>


                </div>
            </div>
        </div>

    </section>
    <section class="section-lite-green contact" id="contact">
        <div class="row">

            <div class="small-12 small-centered medium-8 medium-centered large-10 large-centered columns">
                <h3>Contact us </h3>
            <ul class="contact-details">
                <li><a href="http://slack.phpminds.org/"><i class="fa fa-slack"> </i>Slack </a></li>
                <li><a href="https://twitter.com/phpminds"><i class="fa fa-twitter-square "></i>@phpminds</a></li>
                <li><a href="https://www.irccloud.com/#!/ircs://irc.freenode.net:6697/%23phpminds"><i class="fa fa-comment"></i>#freenode</a></li>
            </ul>
            </div>
        </div>
    </section>

{% endblock %}
    
        
