    "license": "MIT",
    "type": "project",
    "keywords": ["slim-framework", "phpminds"],
    "authors": [
        {
            "name": "Antonis Pavlakis",
            "email": "adoni@pavlakis.info",
            "homepage": "http://pavlakis.info"
        },
        {
            "name": "Shaun Hare",
            "email": "shaun@shaunhare.co.uk",
            "homepage": "http://shaunhare.co.uk"
